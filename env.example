# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# AI Configuration (for !id command)
# Option 1: Use Google Gemini (FREE - Recommended)
GEMINI_API_KEY=your_gemini_api_key_here
AI_PROVIDER=gemini
# OPENAI_MODEL=gemini-1.5-flash  # Default: gemini-1.5-flash (fast) or gemini-1.5-pro (more capable)

# Option 2: Use OpenAI (requires paid API key)
# OPENAI_API_KEY=your_openai_api_key_here
# AI_PROVIDER=openai
# OPENAI_MODEL=gpt-3.5-turbo

# Option 3: Use Ollama (local AI - no API key needed)
# First, install a model on your Ollama server:
#   ssh to your Ollama server and run: ollama pull llama2
# OPENAI_API_URL=http://192.168.1.160:11434/api/generate
# OPENAI_MODEL=llama2  # Must match a model you have installed (check with: ollama list)
# AI_PROVIDER=ollama
# Note: Use /api/generate for native Ollama API (NOT /v1/chat/completions)

# Environment
NODE_ENV=development
